<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="-1dp"
    android:layout_height="-1dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:id="@id/setting_content" android:background="@color/common_select_back" android:layout_width="-1dp" android:layout_height="-1dp" android:layout_below="@id/setting_title">
        <LinearLayout android:orientation="vertical" android:id="@id/devicelistcon" android:background="@color/common_select_back" android:layout_width="-1dp" android:layout_height="-2dp">
            <TextView android:textColor="#000000" android:id="@id/conset" android:layout_width="-2dp" android:layout_height="-2dp" android:layout_margin="10dp" android:text="@string/conset" />
            <ListView android:id="@id/listView1" android:layout_width="-1dp" android:layout_height="-2dp" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@id/devicelistuncon" android:background="@color/common_select_back" android:layout_width="-1dp" android:layout_height="0dp" android:layout_weight="1.0">
            <TextView android:textColor="#000000" android:id="@id/condisset" android:layout_width="-2dp" android:layout_height="-2dp" android:layout_margin="10dp" android:text="@string/condisset" />
            <ListView android:id="@id/listView2" android:layout_width="-1dp" android:layout_height="-2dp" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:id="@id/setting_title" android:background="@color/common_top_bar_blue" android:layout_width="-1dp" android:layout_height="@dimen/height_top_bar" android:layout_alignParentTop="true">
        <LinearLayout android:id="@id/exit" android:layout_width="-2dp" android:layout_height="-1dp">
            <ImageView android:layout_gravity="center_vertical" android:layout_width="-2dp" android:layout_height="-2dp" android:layout_marginLeft="9dp" android:checked="true" android:src="@drawable/check_back_btn" android:scaleType="matrix" android:onClick="viewexitClick" />
        </LinearLayout>
        <TextView android:textSize="20sp" android:textColor="#ffffff" android:layout_width="-2dp" android:layout_height="-2dp" android:text="@string/menu5" android:layout_centerInParent="true" />
    </RelativeLayout>
</RelativeLayout>
